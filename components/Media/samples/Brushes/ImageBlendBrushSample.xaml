<Page x:Class="MediaExperiment.Samples.Brushes.ImageBlendBrushSample"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:brushes="using:CommunityToolkit.WinUI.Media"
      xmlns:ui="using:CommunityToolkit.WinUI"
      mc:Ignorable="d">

    <StackPanel VerticalAlignment="Center" Spacing="32">
        <Grid>
            <!--Background image -->
            <Image Source="ms-appx:///Assets/Bloom.jpg"
               Height="400"/>
            <!--Brush area-->
            <Border BorderBrush="Black" BorderThickness="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="550" Height="300">
                <Border.Background>
                    <brushes:ImageBlendBrush
                        Source="ms-appx:///Assets/BrushAssets/Trex.png"
                        Stretch="None"
                        Mode="ColorDodge"/>
                </Border.Background>
            </Border>
        </Grid>
    </StackPanel>
</Page>
