<Page x:Class="MediaExperiment.Samples.Brushes.AcrylicBrushHostBackdropSample"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:brushes="using:CommunityToolkit.WinUI.Media"
      xmlns:ui="using:CommunityToolkit.WinUI"
      mc:Ignorable="d">

    <StackPanel VerticalAlignment="Center"
                Spacing="32">
        <Grid>
            <!--Background image -->
            <Image Source="ms-appx:///Assets/Bloom.jpg"
                   Height="400"/>
            <!--Brush area-->
            <Border VerticalAlignment="Center" HorizontalAlignment="Center" Width="550" Height="300">
                <Border.Background>
                    <brushes:AcrylicBrush
                        BackgroundSource="HostBackdrop"
                        TintColor="Black"
                        TintOpacity=".2"
                        BlurAmount="2"/>
                </Border.Background>
                <!--Foreground image-->
                <Image VerticalAlignment="Center"
                    Source="ms-appx:///Assets/BrushAssets/Trex.png"
                    Height="100"/>
            </Border>
        </Grid>
    </StackPanel>
</Page>
