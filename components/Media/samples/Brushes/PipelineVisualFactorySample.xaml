<Page x:Class="MediaExperiment.Samples.Brushes.PipelineVisualFactorySample"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:brushes="using:CommunityToolkit.WinUI.Media"
      xmlns:ui="using:CommunityToolkit.WinUI"
      mc:Ignorable="d">

    <Grid>
        <!--Background image -->
        <Image Source="ms-appx:///Assets/Bloom.jpg" Height="400"/>
        <!--Brush area-->
        <Border BorderBrush="Black" BorderThickness=".5" VerticalAlignment="Center" HorizontalAlignment="Center" Width="550" Height="300">
            <brushes:UIElementExtensions.VisualFactory>
                <brushes:PipelineVisualFactory Source="{brushes:BackdropSource}">
                    <brushes:BlurEffect Amount="15"/>
                    <brushes:LuminanceToAlphaEffect />
                    <brushes:SaturationEffect Value="1.4"/>
                    <brushes:BlendEffect Mode="Multiply" Source="{brushes:BackdropSource}"/>
                </brushes:PipelineVisualFactory>
            </brushes:UIElementExtensions.VisualFactory>
        </Border>
    </Grid>
</Page>
